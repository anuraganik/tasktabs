<resources>

    <!-- Base application theme. -->
    <style name="NormalTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary color for the app's theme -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        
        <!-- Background and text colors -->
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        
        <!-- Customize your theme here -->
        <item name="android:buttonStyle">@style/Widget.Button.Jolly</item>
        <item name="android:editTextStyle">@style/Widget.EditText.Jolly</item>
        <item name="android:dialogTheme">@style/DialogTheme.Jolly</item>
    </style>

    <style name="LaunchTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/launch_background</item>
    </style>

    <!-- Custom styles for widgets -->
    <style name="Widget.Button.Jolly" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Widget.EditText.Jolly" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DialogTheme.Jolly" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
    </style>

</resources>

